---
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import ItemGrid from '../ui/ItemGrid.astro';
import type { Contact } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  email,
  fingerprint,
  key,
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props as Contact;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline tagline={tagline} title={title} subtitle={subtitle} />

  {
    (
      <>
        <div class="flex flex-col max-w-3xl mx-auto rounded-lg backdrop-blur border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900 shadow p-4 sm:p-6 lg:p-8 w-full">
          <a href="mailto:rene@karkkainen.net" class="text-center pb-10 text-3xl">
            {email}
          </a>
          <p class="text-center text-2xl">Stuff for nerds:</p>
          <p class="text-center pb-4 text-muted min-h-100">{fingerprint}</p>
          <textarea readonly class="text-center min-h-24 text-muted dark:bg-slate-900">
            {key}
          </textarea>
        </div>
      </>
    )
  }
</WidgetWrapper>
